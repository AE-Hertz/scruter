    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Add Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9fafb;
            color: #1f2937;
            display: flex;
            flex-direction: column;
        }
        .modal-content {
  border-radius: 10px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

.modal-header {
  background: linear-gradient(to bottom, #2b91fe, #6f42c1); /* Change to your desired color */
  color: white;
}

.modal-title {
  font-weight: bold;
}
.close {
  border: none;
  border-radius: 50%; /* Make it round */
  width: 35px; /* Adjust size */
  height: 35px; /* Adjust size */
  display: flex; /* Center the icon */
  justify-content: center; /* Center the icon */
  align-items: center; /* Center the icon */
  background-color: transparent; /* Make background transparent */
  color: #ffffff; 
  font-size: 20px;/* Change color to match your modal header */
  transition: background-color 0.3s, color 0.3s; /* Transition for hover effect */
}

.close:hover {
  background-color: rgba(255, 255, 255, 0.2); /* Light background on hover */
  color: #ffcccc; /* Change icon color on hover for visibility */
}
.form-control {
  border: 1px solid #ced4da;
  border-radius: 5px;
  transition: border-color 0.3s;
}

.form-control:focus {
  border-color: #2e8030; /* Change to match your theme */
  box-shadow: 0 0 5px rgba(46, 128, 48, 0.5);
}

.btn-success {
    background: linear-gradient(to bottom, #2b91fe, #6f42c1); /* Change to your desired color */
  border: none;
  border-radius: 5px;
}

.btn-success:hover {
    background: linear-gradient(to bottom, #2b91fe, #6f42c1); /* Darker shade for hover */
}
        .main-content {
            width: 90%;
            padding-left: 8rem;
            padding-right: 8rem;
            padding-top: 5rem;
            padding-bottom: 5rem;
            background-color: #ffffff;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .dark-mode .main-content {
            background-color: #1c2535;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        }

        .title-section h1 {
            font-size: 2.4rem;
            color: #2563eb;
            font-weight: bold;
            text-align: center;
        }

        .dark-mode .title-section h1 {
            color: #3b82f6;
            text-align: center;
        }

        .title-section p {
            color: #555;
            text-align: center;
            max-width: 700px;
            margin: 0 auto;
            font-size: 1.1rem;
        }

        .dark-mode .title-section p {
            color: #d1d5db;
            text-align: center;
        }

        section {
            margin-top: 2rem;
        }

        section h2 {
            font-size: 1.8rem;
            color: #333;
            display: flex;
            align-items: center;
            border-left: 4px solid #2563eb;
            padding-left: 8px;
            margin-bottom: 1rem;
        }

        .dark-mode section h2 {
            color: #e5e7eb;
            border-left-color: #3b82f6;
        }

        section h2 i {
            margin-right: 8px;
            color: #6f42c1;
        }

        .sidebar {
            width: 25%;
            background: linear-gradient(to bottom, #007bff, #6f42c1);
            color: #fff;
            padding: 20px;
            position: sticky;
            top: 0;
            height: 100vh;
        }

        .dark-mode .sidebar {
            background: linear-gradient(to bottom, #1a1b4e, #1f1f1f);
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            margin-bottom: 15px;
            margin-left: 5px;
        }

        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 1rem;
            gap: 5px;
            display: flex;
            align-items: center;
            padding: 8px;
            transition: color 0.2s;
        }

        .dark-mode .sidebar ul li a {
            color: #e0e0e0;
        }

        .sidebar ul li a:hover {
            color: #e0e0e0;
        }

        .dark-mode .sidebar ul li a:hover {
            color: #ffffff;
        }

        @media (max-width: 768px) {
            .main-content {
                width: 100%;
                padding: 1rem;
            }

            .sidebar {
                display: none;
            }
        }
    </style>
</head>

<body>
    <div id="progress-bar"></div>
    <%- include('partials/navbar') %>

    <div style="display: flex;">
        <aside class="sidebar">
            <ul>
                <li><a href="#introduction"><i class="fas fa-info-circle"></i> Introduction</a></li>
                <li><a href="#getting-started"><i class="fas fa-info-circle"></i>Getting Started</a></li>

                <li><a href="#faq"><i class="fas fa-question-circle"></i> Frequently Asked Questions</a></li>
                <li><a href="#contact"><i class="fas fa-envelope"></i> Contact Support</a></li>
                <li><a href="#feedback"><i class="fas fa-comments"></i> Feedback</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="title-section">
                <h1>Help Center</h1>
                <p>Welcome to our Help Center! Here you can find answers to your questions and get support for our services.</p>
            </div>

            <section id="introduction">
                <h2><i class="fas fa-info-circle"></i> Introduction</h2>
                <p>This Help Center provides resources to assist you with our services. Whether you have questions about our products or need assistance, you can find useful information here.</p>
            </section>
            <section id="getting-started">
              <h2><i class="fas fa-user-plus"></i>Getting Started</h2>
              <p class="mb-2">
                New to our platform? Start by creating an account and exploring features designed to help you easily buy, sell, and find local products and services.
            </p>
            <p class="mb-2">
                Discover how to connect with your community through our ads and listings, and make the most of our guides to learn how to navigate each section effectively for a seamless experience.
            </p> </section>

            
            <section id="faq">
                <h2><i class="fas fa-question-circle"></i> Frequently Asked Questions</h2>
                <div class="faq-item">
                    <div class="faq-question">What is your return policy?</div>
                    <div class="faq-answer">Our return policy allows you to return products within 30 days of receipt for a full refund.</div>
                </div>
                <div class="faq-item">
                    <div class="faq-question">How can I contact customer support?</div>
                    <div class="faq-answer">You can contact customer support via email at support@example.com or call us at 1-800-555-0199.</div>
                </div>
                <div class="faq-item">
                    <div class="faq-question">Do you offer technical support?</div>
                    <div class="faq-answer">Yes, we offer technical support for all our products. Please visit our support page for more information.</div>
                </div>
            </section>

            <section id="contact">
                <h2><i class="fas fa-envelope"></i> Contact Support</h2>
                <p>If you have any questions or need further assistance, please reach out to our support team:</p>
                <ul>
                    <li>Email: <a href="mailto:support@example.com">support@example.com</a></li>
                    <li>Phone: 1-800-555-0199</li>
                    <li>Chat: Available on our website from 9 AM to 5 PM EST</li>
                </ul>
            </section>

            <section id="feedback">
                <h2><i class="fas fa-comments"></i> Feedback</h2>
                <p>Your feedback is important to us! Please let us know how we can improve our services:</p>
                <button class="btn btn-lg" style="color: rgb(79, 145, 208); margin-left: -10px; outline: none;" data-toggle="modal" data-target="#feedbackModal">Give Feedback</button>
  
            </section>
        </main>
    </div>

    <script>
        // Scroll Progress Bar
        window.addEventListener('scroll', () => {
            const scrollTop = window.scrollY;
            const docHeight = document.body.scrollHeight - window.innerHeight;
            const scrollPercent = (scrollTop / docHeight) * 100;
            document.getElementById('progress-bar').style.width = scrollPercent + '%';
        });
    </script>
<!-- Feedback Modal -->
<div class="modal fade" id="feedbackModal" tabindex="-1" role="dialog" aria-labelledby="feedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="feedbackModalLabel">We'd Love Your Feedback!</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="feedbackForm">
            <div class="form-group">
              <label for="feedbackText">Your Feedback</label>
              <textarea class="form-control" id="feedbackText" rows="4" placeholder="Let us know what you think..." required></textarea>
            </div>
            <div class="form-group">
              <label for="email" style="margin-bottom: 5px;">Your Email (optional)</label>
              <input type="email" style="margin-bottom: 10px;" class="form-control" id="email" placeholder="Enter your email">
            </div>
            <button type="submit" class="btn btn-success btn-block">Submit Feedback</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Feedback Form Submission Script -->
  <script>
    $(document).ready(function() {
      // Show feedback modal after 15 seconds
      // setTimeout(function() {
      //   $('#feedbackModal').modal('show');
      // }, 15000);
  
      // Handle form submission
      $('#feedbackForm').on('submit', function(e) {
        e.preventDefault();
  
        const feedback = $('#feedbackText').val();
        const email = $('#email').val();
  
        // Send feedback to server
        $.ajax({
          url: '/submit-feedback', // Replace with your actual endpoint
          method: 'POST',
          contentType: 'application/json',
          data: JSON.stringify({ feedbackText: feedback, email: email }),
          success: function(response) {
            alert('Thank you for your feedback!');
            $('#feedbackModal').modal('hide');
            $('#feedbackForm')[0].reset();
          },
          error: function(jqXHR, textStatus, errorThrown) {
            console.error('Error:', textStatus, errorThrown);
            alert('There was an error submitting your feedback. Please try again.');
          }
        });
      });
  
      // Close modal on clicking close button
      $('.close').on('click', function() {
        $('#feedbackModal').modal('hide');
      });
    });
  </script>

<script>
    // Scroll Progress Bar
    window.addEventListener('scroll', () => {
        const scrollTop = window.scrollY;
        const docHeight = document.body.scrollHeight - window.innerHeight;
        const scrollPercent = (scrollTop / docHeight) * 100;
        document.getElementById('progress-bar').style.width = scrollPercent + '%';
    });
</script>
