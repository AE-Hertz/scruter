<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    
    <style>
        .modal-dialog-centered-scrollable {
    display: flex;
    align-items: center;
    min-height: calc(100% - (.5rem * 2));
}

.modal-dialog-centered-scrollable .modal-content {
    max-height: 80vh;
    overflow-y: auto;
}
.location-link {
    display: none;
}

.location-link:hover {
    text-decoration: underline; /* Optional: Add underline back on hover if desired */
}


.card-img-top {
    height: 250px;
    object-fit: cover;
}

.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    /* Add box shadow to the card */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Default shadow */
}

.card:hover {
    cursor: pointer;
    /* Add a larger shadow on hover */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    /* Slightly increase the card size on hover */
    transform: scale(1.05);
}

.search-bar {
    margin: 20px 0;
}

.search-bar .form-control {
    border-radius: 0;
}

.search-bar .btn {
    border-radius: 0;
}

.social-section {
    padding: 30px;
}
/* Media query for phone screens or smaller */
@media (max-width: 900px) {
    body {
        padding-bottom: 61px;
    }
}

/* General styles for the footer */
.social-section {
    background-color: #f8f9fa;
    padding: 40px 0;
    border-top: 1px solid #e0e0e0;
}

.social-section h4 {
    font-size: 1.4rem;
    font-weight: bold;
    margin-bottom: 20px;
}

.social-section p {
    font-size: 1.1rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
}

            /* Styling for the links in the footer */
            .social-section ul {
                padding-left: 0;
                list-style: none;
            }

            .social-section ul li {
                margin-bottom: 10px;
            }

            .social-section ul li a {
                text-decoration: none;
                color: #333;
                transition: color 0.3s ease;
            }

            .social-section ul li a:hover {
                color: #007bff;
            }

            /* Styles for the social media icons */
            .icon-circle {
                width: 60px;
                height: 60px;
                border-radius: 50%;
                background-color: #fff;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                margin-bottom: 20px;
            }

            .icon-circle:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            }

            .icon-circle a {
                color: #333;
                font-size: 1.8rem;
            }

            .icon-circle a:hover {
                color: #007bff;
            }

            /* Gap between the social media icons */
            .d-flex {
                gap: 15px;
            }

            /* Copyright text styling */
            .copyright-text {
                margin-top: 40px;
                font-size: 0.9rem;
                color: #666;
            }

            /* Responsive design: For smaller screens */
            @media (max-width: 768px) {
                .social-section h4 {
                    font-size: 1.2rem;
                }

                .social-section ul li {
                    font-size: 1rem;
                }

                .icon-circle {
                    width: 50px;
                    height: 50px;
                }

                .icon-circle a {
                    font-size: 1.5rem;
                }
            }
       

    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    <section>
        <div class="justify-content-center">
            <img src="<%= imagepath %>" style="width: 100%; height: auto;" class="img-fluid">
        </div>
        
        <!-- Search Bar -->
        <%- include('partials/searchbar') %>

        <div class="container mt-5 mb-5 pb-5">
            <div class="row">
                <% if (cards.length === 0) { %>
                    <div class="col-12">
                        <p class="text-center">No results found</p>
                    </div>
                <% } else { %>
                    <% cards.forEach(card => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card" style="height: 440px;" data-bs-toggle="modal" data-bs-target="#modal<%= card._id %>" >
                                <img src="<%= card.image %>" class="card-img-top" alt="<%= card.title %> Image">
                                <div class="card-body">
                                    <h5 class="card-title"><%= card.title %></h5>
                                    <p class="card-text">
                                        <a href="https://www.google.com/maps/search/?api=1&query=<%= card.latitude %>,<%= card.longitude %>"
                                            class="location-link">
                                            <i class="fa-solid fa-location-dot me-2"></i>
                                            <%= card.location.length> 30 ? card.location.substring(0, 30) + '...' : card.location %>
                                        </a>

                                    </p>
                                    <% if (card.price) { %>
                                        <p class="card-text"><b>Price: <%= card.price %><i class="fa-solid fa-indian-rupee-sign ms-2"></i></b></p>
                                    <% } %>
                                    <% if (card.rent) { %>
                                        <p class="card-text"><b>Rent: <%= card.rent %><i class="fa-solid fa-indian-rupee-sign ms-2"></i></b></p>
                                    <% } %>
                                    <p class="card-text"><%- card.description.length > 50 ? card.description.substring(0, 50) + ' <i class="text-primary">...Read more</i>' : card.description %></p>
                                </div>
                            </div>
                        </div>

                        <!-- Modal for each card -->
                        <div class="modal fade" id="modal<%= card._id %>" tabindex="-1" aria-labelledby="modalLabel<%= card._id %>" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="modalLabel<%= card._id %>"><%= card.title %></h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <img src="<%= card.image %>" class="img-fluid mb-3" alt="<%= card.title %> Image">
                                        <h5><%= card.title %></h5>
                                        <p class="card-text">
                                            <a href="https://www.google.com/maps/search/?api=1&query=<%= card.latitude %>,<%= card.longitude %>">
                                                <i class="fa-solid fa-location-dot me-2"></i><%= card.location %>
                                            </a>
                                        </p>
                                        <% if (card.price) { %>
                                            <p class="card-text"><b>Price: <%= card.price %><i class="fa-solid fa-indian-rupee-sign ms-2"></i></b></p>
                                        <% } %>
                                        <% if (card.rent) { %>
                                            <p class="card-text"><b>Rent: <%= card.rent %><i class="fa-solid fa-indian-rupee-sign ms-2"></i></b></p>
                                        <% } %>
                                        <p><%= card.description %></p>
                                    </div>
                                    <% if (user && user.username === card.username || user && user.username === "admin") { %>
                                        <div class="modal-footer">
                                            <form action="/delete/<%= selectedType %>/<%= card._id %>" method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </section>
    <%- include('partials/footer') %>
    <%- include('partials/bottom_nav') %>
    <script>
        // /preloader js styling
        let preloader = document.querySelector("#preloader");
        window.addEventListener("load",function(e){
            preloader.style.display = "none";
        });
    </script>
</body>
</html>